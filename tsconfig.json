{
   "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": ["dom", "ES2021"],
      "moduleResolution": "Node",
      "preserveConstEnums": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "target": "ES2019",
      "module": "ES2020",
      "sourceMap": true
   },
   "include": ["**/*.ts"]
}
